<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GalleryActivity">

    <View
        android:id="@+id/view_BackgroundRectangle"
        android:layout_width="0dp"

        android:layout_height="0dp"
        android:layout_marginTop="84dp"
        android:layout_marginBottom="96dp"
        android:background="@color/colorGreyDarker"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_AddAPicture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_AddAPicture"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/view_BackgroundRectangle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/image_CameraIcon"
        android:layout_width="78dp"
        android:layout_height="0dp"
        android:layout_marginBottom="9dp"
        android:contentDescription="@string/description_cameraIcon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Choose_gallery"
        app:srcCompat="@drawable/camera_icon" />

    <Button
        android:id="@+id/Choose_gallery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="329dp"
        android:layout_marginBottom="195dp"
        android:text="Choose from gallery"
        app:layout_constraintBottom_toTopOf="@+id/image_CameraIcon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>