<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GalleryActivity">

    <View
        android:id="@+id/view_BackgroundRectangle"
        android:layout_width="0dp"

        android:layout_height="0dp"
        android:layout_marginTop="84dp"
        android:layout_marginBottom="96dp"
        android:background="@color/colorGreyDarker"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_AddAPicture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_AddAPicture"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/view_BackgroundRectangle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/image_CameraIcon"
        android:layout_width="78dp"
        android:layout_height="78dp"
        android:contentDescription="@string/description_cameraIcon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_BackgroundRectangle"
        app:srcCompat="@drawable/camera_icon" />

    <ImageView
        android:id="@+id/image_GalleryPlaceHolder1"
        android:layout_width="440px"
        android:layout_height="440px"
        android:layout_marginStart="16dp"
        android:layout_marginTop="100dp"
        android:contentDescription="@string/description_galleryImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_launcher_background" />

    <ImageView
        android:id="@+id/image_GalleryPlaceHolder3"
        android:layout_width="440px"
        android:layout_height="440px"
        android:layout_marginTop="16dp"
        android:contentDescription="@string/description_galleryImage"
        app:layout_constraintStart_toStartOf="@+id/image_GalleryPlaceHolder1"
        app:layout_constraintTop_toBottomOf="@+id/image_GalleryPlaceHolder1"
        app:srcCompat="@drawable/ic_launcher_background" />

    <ImageView
        android:id="@+id/image_GalleryPlaceHolder4"
        android:layout_width="440px"
        android:layout_height="440px"
        android:layout_marginTop="16dp"
        android:contentDescription="@string/description_galleryImage"
        app:layout_constraintEnd_toEndOf="@+id/image_GalleryPlaceHolder2"
        app:layout_constraintTop_toBottomOf="@+id/image_GalleryPlaceHolder1"
        app:srcCompat="@drawable/ic_launcher_background" />

    <ImageView
        android:id="@+id/image_GalleryPlaceHolder2"
        android:layout_width="440px"
        android:layout_height="440px"
        android:layout_marginEnd="16dp"
        android:contentDescription="@string/description_galleryImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/image_GalleryPlaceHolder1"
        app:srcCompat="@drawable/ic_launcher_background" />

    <Button
        android:id="@+id/button_2"
        android:layout_width="116dp"
        android:layout_height="96dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="Picture"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_BackgroundRectangle"
        app:layout_constraintVertical_bias="0.533" />

</android.support.constraint.ConstraintLayout>