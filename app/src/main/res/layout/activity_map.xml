<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mapbox="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MapActivity"> <!-- if stuff breaks maybe change back to .MainActivity -->

    <com.mapbox.mapboxsdk.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        mapbox:layout_constraintBottom_toBottomOf="parent"
        mapbox:layout_constraintTop_toBottomOf="@+id/image_Toolbar"
        mapbox:mapbox_cameraTargetLat="51.9244"
        mapbox:mapbox_cameraTargetLng="4.4777"
        mapbox:mapbox_cameraZoom="11"/>


    <ImageView
        android:id="@+id/image_Toolbar"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="32dp"
        android:contentDescription="@string/description_Toolbar"
        mapbox:layout_constraintEnd_toEndOf="parent"
        mapbox:layout_constraintHorizontal_bias="0.492"
        mapbox:layout_constraintStart_toStartOf="parent"
        mapbox:layout_constraintTop_toTopOf="parent"
        mapbox:srcCompat="@drawable/drawable_rounded_corners" />

    <ImageView
        android:id="@+id/image_ToolbarMap"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:clickable="true"
        android:contentDescription="@string/description_ToolbarMapIcon"
        android:focusable="true"
        mapbox:layout_constraintBottom_toBottomOf="@+id/image_Toolbar"
        mapbox:layout_constraintStart_toStartOf="@+id/image_Toolbar"
        mapbox:layout_constraintTop_toTopOf="@+id/image_Toolbar"
        mapbox:srcCompat="@drawable/globe_icon" />

    <ImageView
        android:id="@+id/image_ToolbarPicture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:contentDescription="@string/description_ToolbarAddPictureIcon"
        android:focusable="true"
        android:onClick="goToGallery"
        mapbox:layout_constraintBottom_toBottomOf="@+id/image_Toolbar"
        mapbox:layout_constraintEnd_toEndOf="parent"
        mapbox:layout_constraintStart_toStartOf="parent"
        mapbox:layout_constraintTop_toTopOf="@+id/image_Toolbar"
        mapbox:srcCompat="@drawable/plus_icon" />

    <ImageView
        android:id="@+id/image_ToolbarProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="4dp"
        android:contentDescription="@string/description_ToolbarProfileIcon"
        android:onClick="goToProfile"
        mapbox:layout_constraintBottom_toBottomOf="@+id/image_ToolbarPicture"
        mapbox:layout_constraintEnd_toEndOf="@+id/image_Toolbar"
        mapbox:layout_constraintTop_toTopOf="@+id/image_ToolbarPicture"
        mapbox:srcCompat="@drawable/profile_icon" />

</android.support.constraint.ConstraintLayout>